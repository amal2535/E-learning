<script>

  var currentUrl = window.location.pathname;

  var navLinks = document.querySelectorAll('.nav-link');

  navLinks.forEach(function (link) {
    if (link.getAttribute("href") === currentUrl) {
      link.classList.add('active');
    } else {
      link.classList.remove('active');
    }
  });

  var coursLink = document.querySelector('.navbar-nav .dropdown a[href^="/cours"]');
  var dropdownItems = document.querySelectorAll('.dropdown-item');

  dropdownItems.forEach(function (item) {
    if (item.getAttribute("href") === currentUrl) {
      coursLink.classList.add('active');
      item.classList.add('active');
    } else {
      item.classList.remove('active');
    }
  });

    // Function to be called when the card enters the viewport
    function handleIntersection(entries, observer) {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Add the "fade-in" class to trigger the animation
          entry.target.classList.add('fade-in');
          // Unobserve the card to prevent duplicate animations
          observer.unobserve(entry.target);
        }
      });
    }
  
    // Create an Intersection Observer
    const observer = new IntersectionObserver(handleIntersection, {
      root: null, 
      threshold: 0.2, 
    });
  
    // Observe all cards with the "fade-hidden" class
    const cards = document.querySelectorAll('.fade-hidden');
    cards.forEach((card) => {
      observer.observe(card);
    });







      
